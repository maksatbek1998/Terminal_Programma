<Window x:Class="Terminal.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Terminal"
        mc:Ignorable="d"
        Title="ConnectWindow" Height="300" Width="1000"
        WindowStyle="None" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center"  VerticalAlignment="Center">
            <TextBlock FontSize="70" Foreground="Red" > Нет соединения с сервером</TextBlock>
            <Button Content="OK" FontSize="50" Style="{DynamicResource Menu_Button}"
                    Click="Button_Click"
                    Width="250" Height="70" Margin="0,40,0,0" />
        </StackPanel>
    </Grid>
</Window>
